import React, { useState } from 'react';
import axios from 'axios';
import { Link, useNavigate } from 'react-router-dom';

const Login = () => {
  const [formData, setFormData] = useState({});
  const navigate = useNavigate();

  const handleChange = (e) => {
    setFormData({ ...formData, [e.target.name]: e.target.value });
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    try {
      const res = await axios.post('http://localhost/intern_task_backend/public/api/login', formData);
      localStorage.setItem('token', res.data.token);
      alert('Logged in!');
      navigate('/users');
    } catch (err) {
      alert('Error: ' + (err.response?.data?.msg || 'Failed'));
    }
  };

  return (
    <form onSubmit={handleSubmit} className="p-4 shadow-lg rounded bg-light">
      <h2 className="text-center mb-4">Login</h2>
      <input name="email" type="email" placeholder="Email" onChange={handleChange} className="form-control mb-3" required />
      <input name="password" type="password" placeholder="Password" onChange={handleChange} className="form-control mb-3" required />
      <button type="submit" className="btn btn-primary btn-block">Login</button>
      <p className="mt-3 text-center">No account? <Link to="/register">Register</Link></p>
    </form>
  );
};

export default Login;
